<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head")%>
    <title>Homepage</title>
</head>
<body>
    <%- include("./partials/nav")%> 
        <div class="container mt-3">
            <h1><%= blog.title %></h1>
            <img src="<%= blog.coverImageURL %>" alt="">
            <p><%= blog.body %></p>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="50px"> <%= blog.createdBy.fullName %>
        </div>
        <div class="container mt-4">
            <h1>Comments</h1>

            <% comments.forEach ( comment => {  %>
                <div class="container mt-4">
                    <h6><img src="<%= comment.createdBy.profileImageUrl %>" width="50px"> <%= comment.createdBy.fullName %></h6>
                    <p><%= comment.content %></p>
                </div>
            <% }) %>

            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <input type="text" name="content" class="form-control">
                    <button type="submit" class="btn btn-primary mt-2">Primary</button>
                </form>
            <%} %>
            

        </div>
    <%- include("./partials/scripts")%>
</body>
</html>